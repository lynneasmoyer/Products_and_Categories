@model Category

<h1> <a href="/products">Products</a>  | Categories </h1>

<div>
    <h2>New Product</h2>
    <form class = "col-5" asp-action="NewCategory" asp-controller="Home" method="post">
        <div class="form-group">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control">
        </div>
        <input type="submit" value="Create" class="btn btn-primary">
    </form>
</div>
<div>
    <h2>Existing Categories</h2>
    @foreach(var c in ViewBag.Categories)
    {
        <p><a asp-action="DisplayCategory" asp-route-CategoryId="@c.CategoryId">@c.Name</a></p>
    }
</div>